<% @clients.each do |client| %>
  <% if client_service.has_incomplete_tasks?(client) %>
    <tr>
      <td><a href="/<%= client.id %>"><%= "#{client.name}" %></a></td>
      <td> <%= client_service.status(client) %></td>
      <td> <%= client_service.show_highest_priority_task(client)  %> </td>
      <td> <%= client_service.datetime_highest_priority_task_created(client) %> </td>
      <td> 
        <form action="/" method="POST" onClick="return confirm('Are you sure this is complete?')">
          <input type="hidden" name="client_id" value="<%= "#{client.id}" %>">
          <input type="hidden" name="task_id" value="<%= "#{client_service.highest_priority_task(client).id}" %>">
          <input type="submit" value="Complete" class="button">
        </form>
      </td>
    </tr>
  <% end %>
<% end %>
