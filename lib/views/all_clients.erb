<!DOCTYPE html>
<html>
  <%= erb :head %>
  <body>
    <%= erb :menu_banner %>
    <div class="container">
      <div class="starter-template">
        <p class="lead">Track clients and client-related tasks.</p>
      </div>
    </div><!-- /.container -->


    <h1 class="header">
      All clients
    </h1>

    <div class="belowHeader">

    <%  if @clients %>
      <table class="table table-striped" id="smallTable">
        <tr>
          <td><b>Clients</b></td>
        </tr>
        <% @clients.each do |client| %>
            <tr>
              <td> <%= "#{client.name}" %> </td>
            </tr>
        <% end %>
      </table>
    <% end %>
  </div>
  </body>
</html>
