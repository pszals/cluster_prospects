<html>
  <head>
    <link rel="stylesheet" type="text/css" href="cluster.css">
  </head>
  
  <br>

  <body>
    <h1>
      Cluster: Track clients and tasks
    </h1>
    <%  if @clients %>
      <table border=".25">
        <tr>
          <td><b>Client</b></td>
          <td><b>Top Task</b></td>
        </tr>
        <% @clients.each do |client| %>
          <tr>
            <td> <%= "#{client.name}" %> </td>
            <% if client.task_models != [] %>
            <td> <%= "#{client.task_models.all(:order => [:priority.asc]).last.description}" %> </td>
          </tr>
        <% end %>
        <% end %>
      </table>
    <% else %>
      <p>There are no clients in the database.</p>
    <% end %>
    <p><a href="/all_tasks">View all tasks</a></p>
    <p><a href="/add_client">Add client</a></p>
    <p><a href="/add_task">Add a task</a></p>
  </body>
</html>
