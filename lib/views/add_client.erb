<!DOCTYPE html>
<html>
  <%= erb :head %>
  <body>
    <%= erb :menu_banner %>
    <h1 class="belowHeader">
      Add a client
    </h1>

    <div class="belowHeader">
      <div class="column">
        <form action="/add_client" method="POST">
          <%= erb :client_status %>
        </form>
      </div>

      <%  if @clients %>
        <table class="table table-striped" id="smallTable">
          <tr>
            <td><b>Clients</b></td>
          </tr>
          <% @clients.each do |client| %>
            <tr>
              <td> <%= "#{client.name}" %> </td>
            </tr>
          <% end %>
        </table>
      <% end %>
    </div>
  </body>
</html>
